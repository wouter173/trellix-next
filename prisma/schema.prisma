generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  githubId Int       @unique
  username String
  sessions Session[]
  Board    Board[]

  @@map("user")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@map("session")
}

model Board {
  id      String   @id
  userId  String
  name    String
  columns Column[]
  user    User     @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@map("board")
}

model Column {
  id      String @id
  boardId String
  name    String
  order   Int
  cards   Card[]
  board   Board  @relation(references: [id], fields: [boardId], onDelete: Cascade)

  @@map("column")
}

model Card {
  id       String @id
  columnId String
  name     String
  order    Float
  column   Column @relation(references: [id], fields: [columnId], onDelete: Cascade)

  @@map("card")
}
